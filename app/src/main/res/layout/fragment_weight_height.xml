<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="buffer_activity.WeightHeightFragment"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="About You"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/AboutYouInfo"
        android:textSize="15dp"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/G_profile_pic"
        android:src="@drawable/profile_pic"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/G_profile_email"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email.com"
        android:textSize="15dp"
        android:gravity="center"/>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="391dp"
        android:layout_height="149dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:alignmentMode="alignMargins">
        <!--  ==================================================================    -->

        <TextView
            android:layout_width="55dp"
            android:layout_height="17dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_margin="16dp"
            android:text="Gender"
            android:textSize="12dp" />

        <Button
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button"
            android:elevation="0dp"
            android:text="Male"
            android:textAllCaps="false" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginTop="27dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_down_arrow" />
        <!--  ==================================================================    -->

        <TextView
            android:layout_width="55dp"
            android:layout_height="17dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="top"
            android:layout_margin="16dp"
            android:text="Birthday"
            android:textSize="12dp" />

        <Button
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button"
            android:elevation="0dp"
            android:text="12/22/2001"
            android:textAllCaps="false" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginTop="27dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_down_arrow" />
        <!--  ==================================================================    -->

        <TextView
            android:layout_width="55dp"
            android:layout_height="17dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_margin="16dp"
            android:text="Weight"
            android:textSize="12dp" />

        <Button
            android:id="@+id/Sweight_button"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button"
            android:elevation="0dp"
            android:text="0 lbs"
            android:textAllCaps="false" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginTop="27dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_down_arrow" />
        <!--  ==================================================================    -->
        <TextView
            android:layout_width="55dp"
            android:layout_height="17dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="top"
            android:layout_margin="16dp"
            android:text="Height"
            android:textSize="12dp" />

        <Button
            android:id="@+id/Sheight_button"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button"
            android:elevation="0dp"
            android:text="@string/_5_7"
            android:textAllCaps="false" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginTop="27dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_down_arrow" />
        <!--   ==================================================================    -->
    </GridLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/Snextbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/white"
            android:background="@drawable/button_blue_standard"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingHorizontal="20dp"
            android:layout_margin="30dp"/>
    </RelativeLayout>


</LinearLayout>